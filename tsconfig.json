{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./lib/**/*", "./scripts/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
